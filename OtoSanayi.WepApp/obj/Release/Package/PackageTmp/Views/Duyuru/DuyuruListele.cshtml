@using OtoSanayi.Entities
@using OtoSanayi.WepApp.Models
@model List<Duyuru>
@{
    ViewBag.Title = "TOSS | Teknik Oto Sanayi Sitesi Duyurular";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style type="text/css">

    td a {
        color:dimgray;
    }
     td a:hover {
        color:black;
    }
    
</style>

<div class="bg-transparent">
    <div class="section-title">
        <h1><span><a href="#">T.O.S.S DUYURULAR</a></span></h1>
    </div>

</div>
<div class="tr-section theiaStickySidebar" style="padding:40px;">
    <h2 class="center-block"></h2>
    <div class="row">
       


        <div class="ibox-content">
           
                <table class="footable table table-stripped"  data-filter=#filter>
                    
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr class="gradeX">
                                <td>
                        <a href="/Duyuru/DetayGetir/@AdGetir.LinkAd(item.DuyuruBaslik)/@item.ID" class="list-content">

                            <span class="list-date">@item.DuyuruTarih.ToShortDateString()</span><br />

                            <b class="ist-title">@item.DuyuruBaslik</b>

                            <p>

                               @AdGetir.UzunAd(item.KisaDuyuruIcerik)
                            </p>

                        </a>


                    </td>

                    </tr>
                        }

                        <tfoot>
                            <tr>
                                <td colspan="12">
                                    <ul class="pagination pull-right"></ul>
                                </td>
                            </tr>
                        </tfoot>
                        </table>
                    
        </div>

    </div>
</div>