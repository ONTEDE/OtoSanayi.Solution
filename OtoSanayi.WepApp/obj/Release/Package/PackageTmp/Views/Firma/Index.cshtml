@using OtoSanayi.Entities
@model List<Firma>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


@section Menu_Bilgi{

    <div class="col-lg-10">
        <h2>Firma Yönetimi</h2>
        <ol class="breadcrumb">
            <li class="active">
                <a href="#"><b>Firma Listesi</b></a>
            </li>
            <li>
                Firma Ekle
            </li>
        </ol>
    </div>
}

<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Firma Listesi</h5>
                <div class="ibox-tools">
                    <a href="/Firma/Ekle" class="btn btn-primary">
                        Firma Ekle
                    </a>

                </div>
            </div>
            <div class="ibox-content">
                <input type="text" class="form-control input-sm m-b-xs" id="filter"
                       placeholder="ara">

                <table class="footable table table-stripped" data-page-size="10" data-filter=#filter>
                    <thead>
                        <tr>
                            @*<th>Kategori</th>*@
                            <th>Firma Adı</th>
                            <th>Firma Logo</th>
                            <th>İşlem</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="gradeX">
                                @*<td>@item.Kategori.KategoriAdi</td>*@
                                <td>@item.FirmaAdi</td>
                                

                                <td>
                                    <img height="50" width="60" src="~/img/Firma/@item.Logo" />
                                </td>

                                <td>
                                    <a href="/Firma/Duzenle/@item.ID" class="btn btn-primary btn-xs"><i class="fa fa-pencil"></i> Düzenle</a>
                                    <a href="/Firma/Detay/@item.ID" class="btn btn-warning btn-xs"><i class="fa fa-pencil"></i> Detay</a>
                                    <a href="/Firma/Sil/@item.ID" onclick="return confirm('Silmek İstediğinize Emin Misiniz')" class="btn btn-danger btn-xs"><i class="fa fa-trash"></i> Sil</a>
                                </td>
                            </tr>
                        }

                    <tfoot>
                        <tr>
                            <td colspan="12">
                                <ul class="pagination pull-right"></ul>
                            </td>
                        </tr>
                    </tfoot>
                </table>

            </div>
        </div>
    </div>
</div>
