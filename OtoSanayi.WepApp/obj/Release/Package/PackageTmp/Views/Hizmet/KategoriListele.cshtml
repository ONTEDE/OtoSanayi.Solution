@using OtoSanayi.Entities
@model List<HizmetKategori>
    @{
    ViewBag.Title = "KategoriListele";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


@section Menu_Bilgi{

    <div class="col-lg-10">
        <h2>Hizmet Yönetimi</h2>
        <ol class="breadcrumb">
            <li class="active">
                <a href="#"><b>Hizmet Kategori Listesi</b></a>
            </li>
            <li>
                Hizmet Ekle
            </li>
        </ol>
    </div>
}
<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Duyuru Listesi</h5>
                <div class="ibox-tools">
                    <a href="/Hizmet/KategoriEkle" class="btn btn-primary">
                        Kategori Ekle
                    </a>

                </div>
            </div>
            <div class="ibox-content">
                <input type="text" class="form-control input-sm m-b-xs" id="filter"
                       placeholder="ara">

                <table class="footable table table-stripped" data-page-size="10" data-filter=#filter>
                    <thead>
                        <tr>
                            <th>Kategori ID</th>
                            <th>Kategori Adı</th>
                            <th>İşlemler</th>
                            
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="gradeX">
                                <td>@item.ID</td>
                                <td>@item.HizmetKategoriAdi</td>


                                <td>
                                    <a href="/Hizmet/KategoriDuzenle/@item.ID" class="btn btn-primary btn-xs"><i class="fa fa-pencil"></i> Düzenle</a>
                                    <a href="/Hizmet/KategoriSil/@item.ID" onclick="return confirm('Silmek İstediğinize Emin Misiniz')" class="btn btn-danger btn-xs"><i class="fa fa-trash"></i> Sil</a>
                                </td>
                            </tr>
                        }

                    <tfoot>
                        <tr>
                            <td colspan="12">
                                <ul class="pagination pull-right"></ul>
                            </td>
                        </tr>
                    </tfoot>
                </table>

            </div>
        </div>
    </div>
</div>


