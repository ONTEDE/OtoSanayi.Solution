@using OtoSanayi.Entities
@model List<Haber>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@section Menu_Bilgi{

    <div class="col-lg-10">
        <h2>Haber Yönetimi</h2>
        <ol class="breadcrumb">
            <li class="active">
                <a href="#"><b>Haber Listesi</b></a>
            </li>
            <li>
                 Haber Ekle
            </li>
        </ol>
    </div>
}

<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Duyuru Listesi</h5>
                <div class="ibox-tools">
                    <a href="/Haber/Ekle" class="btn btn-primary">
                        Haber Ekle
                    </a>

                </div>
            </div>
            <div class="ibox-content">
                <input type="text" class="form-control input-sm m-b-xs" id="filter"
                       placeholder="ara">

                <table class="footable table table-stripped" data-page-size="10" data-filter=#filter>
                    <thead>
                        <tr>
                            <th>Haber ID</th>
                            <th>haber Başlık</th>
                            <th>Haber İçerik</th>
                            <th>İşlem</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="gradeX">
                                <td>@item.ID</td>
                                <td>@item.HaberBaslik</td>
                                <td>
                                    @if (item.KisaHaberIcerik.Length > 70) { @item.KisaHaberIcerik.Substring(0,69); }
                                    else { @item.KisaHaberIcerik; }
                                </td>

                                @*<td>
                                    <div class="row">
                                        @if (item.haberResimler != null && item.haberResimler.Count > 0)
                                        {
                                            foreach (var res in item.haberResimler)
                                            {
                                                <div class="col-md-1">
                                                    <img src="~/img/Haber/@res.ResimYol" width="100" height="100" />
                                                </div>

                                            }

                                        }
                                    </div>
                                    
                                </td>*@

                                <td>
                                    <a href="/Haber/Duzenle/@item.ID" class="btn btn-primary btn-xs"><i class="fa fa-pencil"></i> Düzenle</a>
                                    <a href="/Haber/Detay/@item.ID" class="btn btn-warning btn-xs"><i class="fa fa-pencil"></i> Detay</a>
                                    <a href="/Haber/Sil/@item.ID" onclick="return confirm('Silmek İstediğinize Emin Misiniz')" class="btn btn-danger btn-xs"><i class="fa fa-trash"></i> Sil</a>
                                </td>
                            </tr>
                        }

                    <tfoot>
                        <tr>
                            <td colspan="12">
                                <ul class="pagination pull-right"></ul>
                            </td>
                        </tr>
                    </tfoot>
                </table>

            </div>
        </div>
    </div>
</div>
