@model IEnumerable<OtoSanayi.Entities.Haber>
@using OtoSanayi.WepApp.Models
@{
    ViewBag.Title = "TOSS | Teknik Oto Sanayi Sitesi Haberler";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style type="text/css">
    td a {
        color: dimgray;
    }

        td a:hover {
            color: black;
        }
</style>
<div class="bg-transparent">
    <div class="section-title">
        <h1><span><a href="#">T.O.S.S HABERLER</a></span></h1>
    </div>

</div>
<div class="tr-section theiaStickySidebar" style="padding:40px;">
    <h2 class="center-block"></h2>
    <div class="row">



        <div class="ibox-content">

            <table class="footable table table-stripped" data-filter=#filter>

                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr class="gradeX">
                            <td>
                                <a href="/Haber/DetayGetir/@AdGetir.LinkAd(item.HaberBaslik)/@item.ID" class="list-content">

                                   
                                    <b class="ist-title">@item.HaberBaslik</b>

                                    <p>

                                        @AdGetir.UzunAd(item.KisaHaberIcerik)
                                    </p>

                                </a>


                            </td>

                        </tr>
                    }

                <tfoot>
                    <tr>
                        <td colspan="12">
                            <ul class="pagination pull-right"></ul>
                        </td>
                    </tr>
                </tfoot>
            </table>

        </div>

    </div>
</div>

