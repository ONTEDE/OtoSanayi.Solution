@using OtoSanayi.Entities
@model Kullanici
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/validation-summary.css" rel="stylesheet" />
    <div class="ragister-account text-center tr-section tr-section-padding">
        <div class="account-content">
            <div class="logo text-center">
                <a class="navbar-brand" href="/Home/Index"><img class="img-responsive" src="~/img/logo.png" alt="Logo"></a>
            </div>
            <div class="section-title">
                <h1>T.O.S.S PORTALI</h1>
            </div>@using (Html.BeginForm())
            {
                @Html.ValidationSummary(false, "", new { @class = "text-danger" })
            <div class="contact-form contact-form-two">
                <div class="form-group">
                    <input type="text" name="KullaniciAdi" class="form-control" required="required" placeholder="Kullanıcı Adı">
                    <input type="password" name="Parola" class="form-control" required="required" placeholder="Şifre">
                    <button type="submit" class="btn btn-primary">Giriş</button>
                </div>
              
            </div><!-- /.contact-form -->
            }
            

        </div><!-- /.account-content -->
    </div><!-- /.tr-page-content -->


