@model OtoSanayi.Entities.Ilan

@{
    ViewBag.Title = "Ekle";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@section Menu_Bilgi{

    <div class="col-lg-10">
        <h2>Ilan Yönetimi</h2>
        <ol class="breadcrumb">
            <li class="active">
                <a href="#">Ilan Listesi</a>
            </li>
            <li>
                <b> Ilan Ekle</b>
            </li>
        </ol>
    </div>
}
@using (Html.BeginForm("Ekle", "Ilan", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <h4>Ilan</h4>
        <hr />
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-2 "><label class="control-label pull-right">Kategori</label></div>
            <div class="col-md-10">
                @Html.DropDownList("IlanKategoriID", null, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IlanKategoriID, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2 "><label class="control-label pull-right">Firma</label></div>
            <div class="col-md-10">
                @Html.DropDownList("FirmaID", null, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.FirmaID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Baslik, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Baslik, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Baslik, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.KisaAciklama, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.KisaAciklama, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.KisaAciklama, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Aciklama, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Aciklama, 7, 70, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Aciklama, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.ilanResimler, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-sm-10">
                <input type="file" name="IlanResimler" multiple class="form-control" />
                <div>*JPG veya PNG formatında Olmalı</div>
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @Html.ActionLink("Geri", "Index", null, new { @class = "btn btn-warning" })||
                <button type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-plus"></span>Ekle</button>
            </div>
        </div>
    </div>
}
