@model OtoSanayi.Entities.Ilan

@{
    ViewBag.Title = "Detay";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@section Menu_Bilgi{

    <div class="col-lg-10">
        <h2>Ilan Yönetimi</h2>
        <ol class="breadcrumb">
            <li class="active">
                <a href="#">Ilan Listesi</a>
            </li>
            <li>
                <b> Ilan Detay</b>
            </li>
        </ol>
    </div>
}

<div>
    <h4>Ilan</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Baslik)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Baslik)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.kategori.KategoriAdi)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.kategori.KategoriAdi)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.firma.FirmaAdi)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.firma.FirmaAdi)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Aciklama)
        </dt>

        <dd>
            @*@Html.DisplayFor(model => model.Aciklama)*@
            @Html.Raw(Model.Aciklama)
        </dd>
    </dl>
    <div class="row">
        @if (Model.ilanResimler!=null || Model.ilanResimler.Count() > 0)
        {
            foreach (var item in Model.ilanResimler)
            {
                if (item != null) { 
                <div class="col-md-1" style="margin-left:15px;">
                    <img src="~/img/Ilan/@item.ResimYol" width="100" height="100" />
                </div>
                }
            }
        }
    </div><br />
</div>
<p>
    @Html.ActionLink("Geri", "Index", null, new { @class = "btn btn-warning" })||
    @Html.ActionLink("Güncelle", "Duzenle", new { id = Model.ID }, new { @class = "btn btn-primary" })
</p>
