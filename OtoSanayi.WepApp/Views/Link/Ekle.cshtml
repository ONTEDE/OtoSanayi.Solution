@model OtoSanayi.Entities.Link

@{
    ViewBag.Title = "Ekle";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Ekle</h2>

@section Menu_Bilgi{

    <div class="col-lg-10">
        <h2>Link Yönetimi</h2>
        <ol class="breadcrumb">
            <li class="active">
                <a href="#">Link Listesi</a>
            </li>
            <li>
                <b>Link Ekle</b>
            </li>
        </ol>
    </div>
}
@using (Html.BeginForm("Ekle","Link",FormMethod.Post,new {enctype="multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
          <hr />
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.LinkAdi, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.LinkAdi, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.LinkAdi, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.LinkAdres, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.LinkAdres, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.LinkAdres, "", new { @class = "text-danger" })
            </div>
        </div>
        
        <div class="form-group">
            @Html.LabelFor(model => model.LinkLogo, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-sm-10">
                <input type="file" name="Logo" class="form-control" />
                <div>*JPG veya PNG formatında Olmalı</div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @Html.ActionLink("Geri", "Index", null, new { @class = "btn btn-warning" })||
                <button type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-plus"></span>Ekle</button>
            </div>
        </div>
    </div>
}
