@model OtoSanayi.Entities.Mevzuat

@{
    ViewBag.Title = "Duzenle";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@section Menu_Bilgi{

    <div class="col-lg-10">
        <h2>Mevzuat Yönetimi</h2>
        <ol class="breadcrumb">
            <li class="active">
                <a href="#">Mevzuat Listesi</a>
            </li>
            <li>
                <b> Mevzuat Düzenle</b>
            </li>
        </ol>
    </div>
}

@using (Html.BeginForm("Duzenle", "Mevzuat", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Kurum</h4>
        <hr />
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
        @Html.HiddenFor(x => x.ID)
        <div class="form-group">
            <div class="col-md-2 "><label class="control-label pull-right">Kategori</label></div>
            <div class="col-md-10">
                @Html.DropDownListFor(x => x.MevzuatKategoriID, (SelectList)ViewBag.ID, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.MevzuatKategoriID, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Adi, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Adi, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Adi, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.Mevzuatlink, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Mevzuatlink, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Mevzuatlink, "", new { @class = "text-danger" })
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @Html.ActionLink("Geri", "Index", null, new { @class = "btn btn-warning" })||
                <button type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-upload"></span>Güncelle</button>
            </div>
        </div>
    </div>
}

