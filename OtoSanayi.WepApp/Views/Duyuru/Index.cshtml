@model IEnumerable<OtoSanayi.Entities.Duyuru>

@{
    ViewBag.Title = "Duyuru Listesi";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@section Menu_Bilgi{

    <div class="col-lg-10">
        <h2>Duyuru Yönetimi</h2>
        <ol class="breadcrumb">
            <li class="active">
                <a href="#"><b>Duyuru Listesi</b></a>
            </li>
            <li>
                Duyuru Ekle
            </li>
        </ol>
    </div>
}

<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Duyuru Listesi</h5>
                <div class="ibox-tools">
                    <a href="/Duyuru/Ekle" class="btn btn-primary">
                        Duyuru Ekle
                    </a>

                </div>
            </div>
            <div class="ibox-content">
                <input type="text" class="form-control input-sm m-b-xs" id="filter"
                       placeholder="ara">

                <table class="footable table table-stripped" data-page-size="10" data-filter=#filter>
                    <thead>
                        <tr>
                            <th>Duyuru Başlık</th>
                            <th>İçerik</th>
                            <th>Ekleme Tarihi</th>
                            
                            <th>İşlem</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="gradeX">
                                <td>@item.DuyuruBaslik</td>
                                <td>
                                    @if (item.KisaDuyuruIcerik.Length > 71)
                                    {
                                        @item.KisaDuyuruIcerik.Substring(0, 70);
                                    }
                                    else { @item.KisaDuyuruIcerik;}
                                </td>

                                <td>
                                    @item.DuyuruTarih
                                </td>
                                
                                <td>
                                    <a href="/Duyuru/Duzenle/@item.ID" class="btn btn-primary btn-xs"><i class="fa fa-pencil"></i> Düzenle</a>
                                    <a href="/Duyuru/Detay/@item.ID" class="btn btn-warning btn-xs"><i class="fa fa-pencil"></i> Detay</a>
                                    <a href="/Duyuru/Sil/@item.ID" onclick="return confirm('Silmek İstediğinize Emin Misiniz')" class="btn btn-danger btn-xs"><i class="fa fa-trash"></i> Sil</a>
                                </td>
                            </tr>
                        }

                    <tfoot>
                        <tr>
                            <td colspan="12">
                                <ul class="pagination pull-right"></ul>
                            </td>
                        </tr>
                    </tfoot>
                </table>

            </div>
        </div>
    </div>
</div>