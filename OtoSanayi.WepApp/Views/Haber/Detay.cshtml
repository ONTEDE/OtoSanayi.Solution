@model OtoSanayi.Entities.Haber

@{
    ViewBag.Title = "Detay";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@section Menu_Bilgi{

    <div class="col-lg-10">
        <h2>Haber Yönetimi</h2>
        <ol class="breadcrumb">
            <li class="active">
                <a href="#">Haber Listesi</a>
            </li>
            <li>
                <b> Haber Detay</b>
</li>
        </ol>
    </div>
}

<div>
    <h4>Haber</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.HaberBaslik)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.HaberBaslik)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.HaberIcerik)
        </dt>

        <dd>
            @*@Html.DisplayFor(model => model.HaberIcerik)*@
            @Html.Raw(Model.HaberIcerik)
        </dd>

    </dl>
</div>
<div class="row">
    @if (Model.haberResimler!=null||Model.haberResimler.Count() > 0)
    {
        foreach (var item in Model.haberResimler)
        {
            if (item != null) { 
            <div class="col-md-1" style="margin-left:15px;">
                <img src="~/img/Haber/@item.ResimYol" width="100" height="100" />
            </div>
            }
        }
    }
</div><br />
<p>
    @Html.ActionLink("Geri", "Index", null, new { @class = "btn btn-warning" })||
    @Html.ActionLink("Güncelle", "Duzenle", new { id = Model.ID }, new { @class = "btn btn-primary" })
</p>
