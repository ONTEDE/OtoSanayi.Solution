<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>@ViewBag.Title</title>


    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />

    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <!-- FooTable -->
    <link href="~/Content/plugins/footable/footable.core.css" rel="stylesheet">

    <link href="~/Content/animate.css" rel="stylesheet">
    <link href="~/Content/style.css" rel="stylesheet">
    <link href="~/Content/validation-summary.css" rel="stylesheet" />
    <script src="~/scripts/tinymce/tinymce.min.js"></script>
    <script>tinymce.init({ selector: 'textarea' });</script>
</head>

<body>
    <div id="wrapper">

        <!--menu başlangıç-->
        <nav class="navbar-default navbar-static-side" role="navigation">
            <div class="sidebar-collapse">
                <ul class="nav metismenu" id="side-menu">
                    <li class="nav-header">
                        <div class="dropdown profile-element">
                            <span>
                                <img alt="image" class="img-circle" src="~/img/Admin/profile_small.png" />
                            </span>
                            <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                                <span class="clear">
                                    <span class="block m-t-xs">
                                        <strong class="font-bold">Admin</strong>
                                    </span> <span class="text-muted text-xs block">TOSS Admin<b class="caret"></b></span>
                                </span>
                            </a>
                            <ul class="dropdown-menu animated fadeInRight m-t-xs">
                             
                                <li><a href="/Anasayfa" target="_blank">Web Sayfası</a></li>
                                <li class="divider"></li>
                                <li><a href="/Home/Logout">Logout</a></li>
                            </ul>
                        </div>
                        <div class="logo-element">
                            TOSS
                        </div>
                    </li>
                
                    <li>
                        <a href="#"><i class="fa fa-folder"></i> <span class="nav-label">Genel Yonetim</span> <span class="fa arrow"></span></a>
                        <ul class="nav nav-second-level">
                            <li>
                                <a href="/Slider/Index"><i class="fa fa-list"></i> Slider Yönetimi </a>
                            </li>
                            <li>
                                <a href="/Duyuru/Index"><i class="fa fa-bullhorn"></i> Duyuru Yönetimi</a>
                            </li>
                            <li>
                                <a href="/Haber/Index"><i class="fa fa-newspaper-o"></i> Haber Yönetimi</a>
                            </li>
                            <li>
                                <a href="/Kullanici/Index"><i class="fa fa-user-plus"></i> Kullanici Yönetimi</a>
                            </li>
                            <li>
                                <a href="/Link/Index"><i class="fa fa-link"></i> Link Yönetimi</a>
                            </li>
                            <li>
                                <a href="/Reklam/Index"><i class="fa fa-money"></i> Reklam Yönetimi</a>
                            </li>
                            <li>
                                <a href="/Home/SiteMapOlustur"><i class="glyphicon glyphicon-upload"></i> SiteMap Güncelle</a>
                            </li>
                        </ul>
                    </li>
                    <li>
                        <a href="#"><i class="fa fa-building"></i> <span class="nav-label">Firma Yönetimi</span> <span class="fa arrow"></span></a>
                        <ul class="nav nav-second-level">
                            <li><a href="/Firma/KategoriListele"><i class="fa fa-list"></i>Firma Kategori</a></li>
                            <li><a href="/Firma/Index"><i class="fa fa-list"></i>Firma Listesi</a></li>
                        </ul>
                    </li>
                    <li>
                        <a href="#"><i class="fa fa-map-o"></i> <span class="nav-label">İlan Yönetimi</span> <span class="fa arrow"></span></a>
                        <ul class="nav nav-second-level">
                            <li><a href="/Ilan/KategoriListele"><i class="fa fa-list"></i>İlan Kategori</a></li>
                            <li><a href="/Ilan/Index"><i class="fa fa-list"></i>İlan Listesi</a></li>
                        </ul>
                    </li>
                    <li>
                        <a href="#"><i class="fa fa-cubes"></i> <span class="nav-label">Kurumsal Yönetimi</span> <span class="fa arrow"></span></a>
                        <ul class="nav nav-second-level">
                            <li><a href="/Kurumsal/KategoriListele"><i class="fa fa-list"></i>Kurumsal Kategori</a></li>
                            <li><a href="/Kurumsal/Index"><i class="fa fa-list"></i>Kurumsal Listesi</a></li>
                        </ul>
                    </li>
                 

                </ul>

            </div>
        </nav>
        <!--menu bitiş-->

        <div id="page-wrapper" class="gray-bg">
            <div class="row border-bottom">
                <nav class="navbar navbar-static-top" role="navigation" style="margin-bottom: 0">
                    <div class="navbar-header">
                        <a class="navbar-minimalize minimalize-styl-2 btn btn-primary " href="#"><i class="fa fa-bars"></i> </a>
                       
                    </div>
                    <ul class="nav navbar-top-links navbar-right">
                        <li>
                            <span class="m-r-sm text-muted welcome-message"> Teknik Oto Sanayi Web Uygulaması</span>
                        </li>

                        <li>
                            <a href="/Home/Logout">
                                <i class="fa fa-sign-out"></i> Çıkış
                            </a>
                        </li>
                    </ul>

                </nav>
            </div>
            <div class="row wrapper border-bottom white-bg page-heading">
                @RenderSection("Menu_Bilgi", required: false)
               
            </div>
            <div class="wrapper wrapper-content animated fadeInRight">
                @RenderBody()
            </div>
            <!--footer başlangıç.-->
            <div class="footer">
                <div class="pull-right">
                    Teknik Oto <strong>Sanayi Sitesi</strong> Web Uygulaması
                </div>
                <div>
                    <strong> Copyright</strong> ONTEDE &copy; @DateTime.Now.Year
                </div>
            </div>
            <!--footer bitiş-->

        </div>
    </div>



    <!-- Mainly scripts -->
    <script src="~/scripts/Admin/jquery-2.1.1.js"></script>
    <script src="~/scripts/Admin/bootstrap.min.js"></script>
    <script src="~/scripts/Admin/plugins/metisMenu/jquery.metisMenu.js"></script>
    <script src="~/scripts/Admin/plugins/slimscroll/jquery.slimscroll.min.js"></script>

    <!-- FooTable -->
    <script src="~/scripts/Admin/plugins/footable/footable.all.min.js"></script>

    <!-- Custom and plugin javascript -->
    <script src="~/scripts/Admin/inspinia.js"></script>
    <script src="~/scripts/Admin/plugins/pace/pace.min.js"></script>

    <!-- Page-Level Scripts -->
    <script>
        $(document).ready(function () {

            $('.footable').footable();
            $('.footable2').footable();

        });

    </script>

</body>

</html>
